{# app/Resources/views/default/index.html.twig #}
{% extends 'base.html.twig' %}
{% block connexion %}
<div class="connexion">
	<img class="profilPic" src="{{user.profilPic}}">
	<h1>{{user.username}} {{user.email}}</h1>
	<a href="">Personaliser mon profil</a>
	<br>
	<a href="">Se d√©connecter</a>
</div>
{% endblock %}
{% block body %}
<h1>Liste des posts</h1>
{% for post in posts %}
<div class="post">
	<div class="top">
		<img class="profilPic" src="{{user.profilPic}}">
		<div class="author">{{post.getauthor.getusername}} {{post.getauthor.getemail}}</div>
		<div class="postTime">{{post.dateUpdate|date("d/m/Y")}}</div>
		<div class="follow"><button class="followButton button">Suivre</button></div>
	</div>
	<div class="content">{{post.message}}<div class="embed"><img class="embedPic" src="http://www.tao-restaurant.fr/wp-content/uploads/2013/03/plage20111102.jpg"></div></div>
	<div class="socialButton"><button class="like button">J'aime</button>nb-jaime<button class="RT button">RT</button>nb-RT</div>
</div>
{% endfor %}
{% endblock %}
{% block stylesheets %}
{% stylesheets 'bundles/app/css/main.css' filter="cssrewrite" %}
<link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}