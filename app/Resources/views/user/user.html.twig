{# app/Resources/views/default/index.html.twig #}
{% extends 'base.html.twig' %}
{% block connexion %}
<div class="connexion">
	<h1>Bienvenue <img class="profilPic" src="{{user.profilPic}}">{{user.nom}} {{user.prenom}}</h1>
	<a href="">Personaliser mon profil</a>
	<a href="">Se déconnecter</a>
</div>
{% endblock %}
{% block body %}
<h1>Liste des posts</h1>
<div class="post">
	<div class="author"><img class="profilPic" src="{{user.profilPic}}">{{user.nom}} {{user.prenom}}</div>
	<div class="follow"><button class="followButton button">Suivre</button></div>
	<div class="content">Trop bien la journée à la plage<div class="embed"><img class="profilPic" src="http://www.tao-restaurant.fr/wp-content/uploads/2013/03/plage20111102.jpg"></div></div>
	<div class="socialButton"><button class="like button">J'aime</button>nb-jaime<button class="RT button">RT</button>nb-RT</div>
</div>
{# ... #}
{% endblock %}
{% block stylesheets %}
{% stylesheets 'bundles/app/css/main.css' filter="cssrewrite" %}
<link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}