{# app/Resources/views/default/index.html.twig #}
{% extends 'base.html.twig' %}
{% block connexion %}
<div class="connexion">
	<img class="profilPic" src="{{user.profilPic}}">
	<h1>{{user.username}} </h1>
	<a href="">Personaliser mon profil</a>
	<br>
	<a href="">Se d√©connecter</a>
</div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-6">
            <h1>Personalisation du profil</h1>
            <form method="post" action="/user/edit/valid">
                <div class="form-group">
                    <label>Username : </label>
                    <input type="text" name="username" value="{{ user.username }}" class="form-control">
                </div>
                <div class="form-group">
                    <label>Email : </label>
                    <input type="email" name="email" value="{{ user.email }}" class="form-control">
                </div>
                <input type="submit" value="Modifier">
            </form>

        </div>
    </div>

{% endblock %}
{% block stylesheets %}
{% stylesheets 'bundles/app/css/main.css' filter="cssrewrite" %}
<link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}